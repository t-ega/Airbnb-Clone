<div class="max-w-3xl mx-auto p-4 sm:p-6 md:p-8 lg:p-10">
  <div class="grid md:grid-cols-2 gap-8">
    <div class="bg-gray-100 dark:bg-gray-800 rounded-lg p-6 sm:p-8">
      <div class="flex items-center justify-between mb-4">
        <h1 class="text-2xl font-bold">Checkout</h1>
        <div class="text-gray-500 dark:text-gray-400">Order #3102</div>
      </div>
      <div class="grid gap-6">
        <div class="grid gap-2">
          <div class="text-gray-500 dark:text-gray-400">Property</div>
          <div class="font-medium"><%= @property_name %></div>
        </div>
        <div class="grid gap-2">
          <div class="text-gray-500 dark:text-gray-400">Dates</div>
          <div class="font-medium"><%= format_checkin_date %> - <%= format_checkout_date %></div>
        </div>
        <div class="grid gap-2">
          <div class="text-gray-500 dark:text-gray-400">Guests</div>
          <div class="font-medium">1 guests</div>
        </div>
        <div data-orientation="horizontal" role="none" class="shrink-0 bg-gray-100 h-[1px] w-full"></div>
        <div class="grid gap-2">
          <div class="text-gray-500 dark:text-gray-400">Total</div>
          <div class="font-medium text-2xl"><%= number_to_currency(@total) %></div>
        </div>
      </div>
    </div>
   <div class="bg-gray-100 dark:bg-gray-800 rounded-lg p-6 sm:p-8 w-auto">
  <h2 class="text-2xl font-bold mb-4">Crypto Payment</h2>
  <div class="grid gap-6">
    <div class="grid gap-2">
      <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70" for="wallet-address">
        Wallet Address
      </label>
      <div class="flex items-center">
        <div class="flex-1">
          <input class="flex h-10 w-auto rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50" type="text" id="wallet-address" value=<%= @wallet_address %> readonly="" />
        </div>
        <button class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-10 w-10">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-5 w-5">
            <rect width="14" height="14" x="8" y="8" rx="2" ry="2"></rect>
            <path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"></path>
          </svg>
          <span class="sr-only">Copy wallet address</span>
        </button>
      </div>
    </div>
    <div class="grid gap-2">
      <div class="text-gray-500 dark:text-gray-400">Amount to Send</div>
      <div class="font-medium text-2xl whitespace-nowrap"><%= format_estimated_price %> <%= format_currency %></div>
    </div>
    <div class="grid gap-2">
      <div class="text-gray-500 dark:text-gray-400">Crypto Network</div>
      <div class="font-medium whitespace-nowrap"><%= format_currency %></div>
    </div>
    <div class="flex items-center justify-center">
      <div class="bg-white dark:bg-gray-400 rounded-lg p-6 shadow-lg">
        <%= image_tag(build_qr_code.to_data_url) %>
      </div>
    </div>
    <div class="text-sm text-gray-500 dark:text-gray-400 text-center">
      Scan the QR code with your <%= @currency.capitalize %> wallet to make a deposit of <%= format_estimated_price %> <%= format_currency %>.
    </div>
     <%= button_to(
      "I have paid",
      property_reservations_path,
      params: {checkin_date: @checkin_date, wallet_address: @wallet_address, checkout_date: @checkout_date, estimated_crypto_amount: format_estimated_price, property_id: @property_id },
      class: "h-10 border rounded-md w-full bg-red-700 text-white"
    ) %>
   
  </div>
</div>
  </div>
</div>