<div class="max-w-3xl mx-auto p-4 sm:p-6 md:p-8 lg:p-10">
  <div class="grid md:grid-cols-2 gap-8">
    <div class="bg-gray-100 dark:bg-gray-800 rounded-lg p-6 sm:p-8">
      <div class="flex items-center justify-between mb-4">
        <h1 class="text-2xl font-bold">Checkout</h1>
        <div class="text-gray-500 dark:text-gray-400">Order #3102</div>
      </div>
      <div class="grid gap-6">
        <div class="grid gap-2">
          <div class="text-gray-500 dark:text-gray-400">Property</div>
          <div class="font-medium"><%= @property_name %></div>
        </div>
        <div class="grid gap-2">
          <div class="text-gray-500 dark:text-gray-400">Dates</div>
          <div class="font-medium"><%= @formatted_checkin_date %> - <%= @formatted_checkout_date %></div>
        </div>
        <div class="grid gap-2">
          <div class="text-gray-500 dark:text-gray-400">Guests</div>
          <div class="font-medium">1 guests</div>
        </div>
        <div data-orientation="horizontal" role="none" class="shrink-0 bg-gray-100 h-[1px] w-full"></div>
        <div class="grid gap-2">
          <div class="text-gray-500 dark:text-gray-400">Total</div>
          <div class="font-medium text-2xl"><%= number_to_currency(@total) %></div>
        </div>
      </div>
    </div>
    <div class="bg-gray-100 dark:bg-gray-800 rounded-lg p-6 sm:p-8">
      <h2 class="text-2xl font-bold mb-4">Crypto Payment</h2>
      <div class="grid gap-6">
        <div class="grid gap-2">
          <label
            class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70"
            for="wallet-address"
          >
            Wallet Address
          </label>
          <div class="flex items-center gap-4">
            <div class="flex-1">
              <input
                class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
                type="text"
                id="wallet-address"
                placeholder="0x0123456789abcdef0123456789abcdef01234567"
                readonly=""
                />
            </div>
            <button class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 border border-input bg-background hover:bg-accent hover:text-accent-foreground h-10 w-10">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="h-5 w-5"
              >
                <rect width="14" height="14" x="8" y="8" rx="2" ry="2"></rect>
                <path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"></path>
              </svg>
              <span class="sr-only">Copy wallet address</span>
            </button>
          </div>
        </div>
        <div class="grid gap-2">
          <div class="text-gray-500 dark:text-gray-400">Amount to Send</div>
          <div class="font-medium text-2xl">0.05 ETH</div>
        </div>
        <div class="grid gap-2">
          <div class="text-gray-500 dark:text-gray-400">Crypto Network</div>
          <div class="font-medium">Ethereum (ERC-20)</div>
        </div>
        <div class="flex items-center justify-center">
          <div class="bg-white dark:bg-gray-950 rounded-lg p-6 shadow-lg"></div>
        </div>
        <div class="text-sm text-gray-500 dark:text-gray-400 text-center">
          Scan the QR code with your Ethereum wallet to make a deposit of 0.05 ETH.
        </div>
        <button class="inline-flex items-center justify-center whitespace-nowrap text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-11 rounded-md px-8 w-full">
          Place Order
        </button>
      </div>
    </div>
  </div>
</div>