<section class="mx-auto max-w-6xl px-4 py-2 sm:px-6 lg:px-8">
  <div class="mt-8 grid gap-8">
    <% reviews.includes(:reviewer).each do |review| %>
        <article class="grid grid-cols-[48px_1fr] items-start gap-4">
      <span class="relative flex shrink-0 overflow-hidden rounded-full h-12 w-12 border">
        <img class="aspect-square h-full w-full" alt="@username" src="/placeholder-user.jpg" />
      </span>
      <div class="space-y-2">
        <div class="flex items-center gap-2 text-sm font-medium">
          <span><%= review.reviewer.full_name %></span>
          <span class="text-gray-500 dark:text-gray-400">Bernard Hill, California</span>
        </div>
        <div class="flex items-center gap-1 text-xs font-semibold">
          <div class="flex items-center gap-px">
            <%= display_star_rating(review.rating) %>
          </div>
          <span><%= time_ago_in_words(review.created_at) %> ago</span>
        </div>
        <p>
          <%= review.content %>
        </p>

      </div>
    </article>

    <% end %>
  </div>
</section>